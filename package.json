{
  "name": "discord-bot",
  "version": "1.0.0",
  "description": "Многофункциональный Discord бот с модерацией, утилитами, курсами валют/крипты, погодой, AI (Groq) и 70+ slash командами",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/"
  },
  "keywords": [
    "discord",
    "discord-bot",
    "discord.js",
    "discord-moderation-bot",
    "discord-utility-bot",
    "discord-crypto-bot",
    "discord-weather-bot",
    "discord-translate-bot",
    "discord-polls-bot",
    "discord-slash-commands",
    "typescript-discord-bot"
  ],
  "author": "anovic123",
  "license": "MIT",
  "description": "Powerful multi-purpose Discord bot with moderation, utilities, crypto/currency rates, weather, translations, polls, daily stats reports and 70+ slash commands",
  "dependencies": {
    "axios": "^1.13.4",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "node-cron": "^4.2.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.1.0",
    "@types/node-cron": "^3.0.11",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
